<!DOCTYPE html>
<html>
  <head>
    <title>Test2018MiniCapstone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |name, message| %>
      <p> <%= message %> </p>
    <% end %> 
    
    <nav>
      <a href="/client/products">All products</a>
      <% if session[:admin] %>
        <a href="/client/products/new">New product</a>
      <% end %>
      <% if session[:jwt] %>
        <a href="/client/logout">Logout</a>
      <% else %>
        <a href="/client/signup">Signup</a>
        <a href="/client/login">Login</a>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
